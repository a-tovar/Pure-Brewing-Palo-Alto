       {% for tag in _product.tags %}
                   {% if tag=='single' %}
                       {%assign beertype = 'West Coast IPA' %}
                       {% break %}
         {% elsif tag=='double'%}
           {%assign beertype = 'West Coast Double IPA' %}
                       {% break %}
         {% elsif tag=='triple'%}
           {%assign beertype = 'West Coast Triple IPA' %}
                       {% break %}
         {% elsif tag=='quad'%}
           {%assign beertype = 'West Coast Quad IPA' %}
                       {% break %}
         {% elsif tag=='quint'%}
           {%assign beertype = 'West Coast Quint IPA' %}
                       {% break %}
                   {% endif %} 
               {% endfor %}
         
       {% break %}
     {% elsif tag == 'murky IPA' %}
       {% for tag in _product.tags %}
                   {% if tag=='single' %}
                       {%assign beertype = 'Murky IPA' %}
                       {% break %}
         {% elsif tag=='double'%}
           {%if _product.tags contains 'sour' %}
             {%assign beertype = 'Sour Double IPA' %}
           {%else%}
             {%assign beertype = 'Murky Double IPA' %}
           {% endif %} 
                       {% break %}
         {% elsif tag=='triple'%}
           {%assign beertype = 'Murky Triple IPA' %}
                       {% break %}
         {% elsif tag=='quad'%}
           {%assign beertype = 'Murky Quad IPA' %}
                       {% break %}
         {% elsif tag=='quint'%}
           {%assign beertype = 'Murky Quint IPA' %}
                       {% break %}
                   {% endif %} 
               {% endfor %}
       {% break %}
     {% endif %} 
   {% endfor %}
   {% break %}
 {% elsif tag=='sour' %}
   {% for tag in _product.tags %}
         {% if tag=='BA' %}
     {%assign beertype = 'Barrel-aged Sour Ale' %}
                 {% for tag in _product.tags %}
                     {% if tag=='feral' %}
                         {%assign beertype = 'Barrel-aged Feral Ale' %}
                         {% break %}
                     {% elsif tag=='flanders golden'%}
                         {%assign beertype = 'Barrel-aged Flanders Golden Ale' %}
                         {% break %}
                     {% elsif tag=='flanders red'%}
                         {%assign beertype = 'Barrel-aged Flanders Red Ale' %}
                         {% break %}
                     {% elsif tag=='MT'%}
                         {%assign beertype = 'MÃ©thode Traditionnelle' %}
                         {% break %}
                     {% elsif tag=='saison'%}
                         {%assign beertype = 'Barrel-aged Saison' %}
                         {% break %}
                     {% endif %} 
                 {% endfor %}
                 {% break %}
     {% elsif tag=='imperial' %}
       {%assign beertype = 'Imperial Sour Ale' %}
               {% break %}
     {% elsif tag=='smoothie' %}
       {%assign beertype = 'Smoothie-style Sour Ale' %}
               {% break %}
     {% endif %} 
   {% endfor %}
   {% break %}
 {% elsif tag=='stout' %}
   {%assign beertype = 'Imperial Stout' %}
     {% for tag in _product.tags %}
         {% if tag=='BA' %}
            {%assign beertype = 'Barrel-aged Imperial Stout' %}
            {% break %}
     {% endif %} 
   {% endfor %}
   {% break %}
 {% elsif tag=='kombucha' %}
     {%assign beertype = 'Hard Kombucha' %}
  {% elsif tag=='adventure' %}
     {%assign beertype = 'Adventure Beer' %}
 {% elsif tag=='still' or tag=='mead' %}
     {%assign beertype = 'Barrel-aged Mead-inspired Ale' %}
   {% endif %}
 {% endfor %}

