{%assign beertype = ''%}
{%assign isbundle = 0%}
{%assign ispairing = 0%}
 {% for tag in _product.tags %}
   {% if tag=='bundle' or tag=='sampler' %}
   {%assign isbundle = 1%}
     {%assign beertype = 'Mixed Pack' %}
   {% break %}
   {% elsif tag=='blonde' %}
     {%assign beertype = 'Blonde Ale' %}
   {% break %}
 {% elsif tag=='pub' %}
     {%assign beertype = 'Pub Ale' %}
   {% break %}
 {% elsif tag=='barleywine' %}
     {%assign beertype = 'Barleywine' %}
   {% break %}
 {% elsif tag=='cream' %}
     {%assign beertype = 'Cream Ale' %}
   {% break %}
 {% elsif tag=='belgian' %}
     {%assign beertype = 'Belgian-style Ale' %}
   {% break %}
 {% elsif tag=='porter' %}
     {%assign beertype = 'Porter' %}
   {% break %}
{% elsif tag == 'saison' %}
	{%assign beertype = 'Saison' %}
  {% break %}
 {% elsif tag=='lager' %}
   {%assign beertype = 'Lager' %}
   {% for tag in _product.tags %}
     {% if tag=='pilsner' %}
             {%assign beertype = 'Pilsner' %}
       {% break %}
     {% endif %} 
   {% endfor %}
   {% break %}
 {% elsif tag=='IPA' %}
 {%assign beertype = 'IPA' %}
