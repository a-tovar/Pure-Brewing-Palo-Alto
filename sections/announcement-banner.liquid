{%- comment -%} /sections/announcement-banner-template.liquid {%- endcomment -%}

{%- style -%}
  #shopify-section-announcement-bar {
    background: {{ section.settings.color_announcement_bar_bg }};
    color: {{ section.settings.color_announcement_bar_text }};
  }
{%- endstyle -%}

  <div data-section-id="{{ section.id }}">
    {%- if section.blocks.size > 0 -%}
      <div >
        <div >
          {%- for block in section.blocks -%}
            {%- assign text = block.settings.text -%}
            {%- assign link = block.settings.link -%}
            <div {{ block.shopify_attributes }}>
              {%- if link != blank -%}
                <a href="{{ link }}">
                  {{- text | strip_html | truncatewords: 50 -}}
                </a>
              {%- else -%}
                {{- text | strip_html | truncatewords: 50 -}}
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>


{% schema %}
{
  "name": "Announcement banner",
  "settings": [
    {
      "type": "color",
      "id": "color_announcement_bar_bg",
      "label": "Background",
      "default": "#fafafa"
    },
    {
      "type": "color",
      "id": "color_announcement_bar_text",
      "label": "Text",
      "default": "#333"
    }
  ],
  "blocks": [
    {
      "name": "Announcement-banner",
      "type": "announcemen-banner",
      "limit": 3,
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Announce something here"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    },
    {
      "name": "Beer Shipping Info",
      "type": "beer-shipping-info",
      "limit": 3,
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Shipping INCLUDED for Beer Orders Over $200!"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    },
    {
      "name": "Merch Shipping Info",
      "type": "merch-shipping-info",
      "limit": 3,
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Shipping FREE for Merchandise Orders Over $50!"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ]
}
{% endschema %}